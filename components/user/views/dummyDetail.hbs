<section class="section">
    <div class="empty-lg-140 empty-md-100 empty-sm-60 empty-xs-60"></div>
    <div class="empty-lg-50 empty-md-20 empty-sm-10 empty-xs-10"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0">
                <div class="simple-item color-type-2 text-center">
                    <div class="main-title">
                        <h1 class="h1 color-2">Chi tiết đơn hàng</h1>
                        <div class="empty-sm-25"></div>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="simple-text md opacity-1">
                                <p>Xem lại chi tiết đơn hàng mà bạn đã đặt.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-xs-12">
                <div class="empty-sm-60 empty-xs-30"></div>
                <div class="text-left check-subtitle">
                    <h4 class="h4 sm color-2">Đơn hàng của bạn</h4>
                </div>
                <div class="empty-sm-40 empty-xs-20"></div>
                <table class="order-list" cols="4" cellspacing="0">
                        <tr>
                            <td>
                                <div class="img hover-zoom">
                                    <div class="color-type-1">
                                        <a href="/dishes/{{dish_id}}" class="image-hover"><img src="/img/shop_list_img_1.png" alt=""></a>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <h5 class="h5 caption"><a href="#" class="link-hover">Pizza hải sản pesto xanh (Size xxxlg)</a></h5>
                            </td>
                            <td>
                                <div class="shop-item">
                                    <h6 class="h6">3 items</h6>
                                </div>
                            </td>
                            <td>
                                <h5 class="h5 sm order-price main-col">500.000 đ</h5>
                            </td>
                        </tr>
                </table>
                <div class="empty-sm-30 empty-xs-15"></div>


                <div class="cart-total" id="cart-total">
                    <ul>
                        <li><h5 class="tt h5 sm color-2 height-50">Tổng tiền món ăn<span><b class="main-col">{{standardPrice 1 cart.totalCostInCart}}</b></span></h5></li>
                        <li><h5 class="tt h5 sm color-2 height-50">Phí vận chuyển<span><b class="main-col">{{standardPrice 1 shippingFee}}</b></span></h5></li>
                        <div class="empty-sm-15 empty-xs-15"></div>
                        <li><h4 class="tt h4 color-2 height-50">Tổng:<span><b class="main-col">{{standardPrice 1 totalCost}}</b></span></h4></li>
                    </ul>
                </div>

            </div>
            <div class="col-md-7 col-xs-12">
                <div class="empty-sm-60 empty-xs-30"></div>
                <div class="text-left check-subtitle">
                    <h4 class="h4 sm color-2">Thông tin của bạn</h4>
                </div>
                <div class="empty-sm-40 empty-xs-20"></div>
                <form action="#">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="input-field-icon">
                                <input type="text" class="input-field" placeholder="Họ và tên*" name="name" readonly value="{{user.name}}">
                                <div class="icon">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            <div class="empty-sm-20 empty-xs-20"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <div class="input-field-icon">
                                <input type="text" class="input-field" placeholder="Email*" name="email" readonly value="{{user.email}}">
                                <div class="icon">
                                    <i class="fa fa-envelope"></i>
                                </div>
                            </div>
                            <div class="empty-sm-20 empty-xs-20"></div>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <div class="input-field-icon">
                                <input type="text" class="input-field" placeholder="Số điện thoại*" name="phone" readonly value="{{user.phone}}">
                                <div class="icon">
                                    <i class="fa fa-phone"></i>
                                </div>
                            </div>
                            <div class="empty-sm-20 empty-xs-20"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="input-field-icon">
                                <input type="text" class="input-field" placeholder="Địa chỉ*" name="address" readonly value="{{user.address}}">
                                <div class="icon">
                                    <i class="fas fa-map-marker"></i>
                                </div>
                            </div>
                            <div class="empty-sm-20 empty-xs-20"></div>
                        </div>
                    </div>
                    <div class="input-field-wrap">
                        <textarea placeholder="Message" class="input-field color-2" readonly></textarea>
                        <div class="focus"></div>
                    </div>


                    <div class="empty-sm-50 empty-xs-50"></div>

                    <!-- nếu đơn hàng đang giao -->
                    <div class="fr button-full-width">
                        <a href="/order" class="button size-2 style-3">
                            <span class="button-wrapper">
                                <span class="icon"><img src="/img/icon-4.png" alt=""></span>
                                <span class="text">Hủy đơn</span>
                            </span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="empty-lg-140 empty-md-100 empty-sm-60 empty-xs-60"></div>
</section>